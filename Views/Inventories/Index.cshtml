@model IEnumerable<DnDFrontEnd.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Encumberance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Encumberance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character.PlayerCharacterid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Inventoryid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Inventoryid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Inventoryid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
