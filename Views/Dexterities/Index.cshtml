        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dexsaveprof)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dexvalue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acrobatics.Acrobaticsid)
            </td>
