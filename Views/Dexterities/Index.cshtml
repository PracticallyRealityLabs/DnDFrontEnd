@model IEnumerable<DnDFrontEnd.Models.Dexterity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dexsaveprof)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dexvalue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acrobatics)
            </th>
